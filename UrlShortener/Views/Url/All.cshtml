@model UrlShortener.Models.AllUrlsModel
@{
    ViewData["Title"] = "Urls";
}

<h1>Urls</h1>

<form asp-page="/urls/all" method="get">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="/urls/all" asp-route-sortOrder="@Model?.FullUrlSort" asp-route-searchSearch="@Model?.Filter">
                        @Html.DisplayNameFor(m => m.ShortenedUrls[0].FullUrl)
                    </a>
                </th>
                <th>
                    <a asp-page="/urls/all" asp-route-sortOrder="@Model?.FullAliasUrlSort">
                        @Html.DisplayNameFor(m => m.ShortenedUrls[0].FullAliasUrl)
                    </a>
                </th>
                <th>
                    <a asp-page="/urls/all" asp-route-sortOrder="@Model?.CreatedSort">
                        @Html.DisplayNameFor(m => m.ShortenedUrls[0].Created)
                    </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShortenedUrlModel item in Model?.ShortenedUrls ?? [])
            {
                <tr>
                    <td>
                        @Html.DisplayFor(_ => item.FullUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.FullAliasUrl)
                    </td>
                    <td>
                        @Html.DisplayFor(_ => item.Created)
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!--Pagination controls-->
    @{
    }
</form>
